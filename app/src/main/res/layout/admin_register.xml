<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#302E2E"
    tools:context=".AdminRegisterActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="6dp"
        android:elevation="30dp"
        android:layout_gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="18dp"
        android:layout_margin="12dp"
        android:layout_height="450dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:padding="12dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginTop="30dp"
                android:layout_width="wrap_content"
                android:text="       Admin
Register"
                android:textSize="30dp"
                android:textStyle="bold|italic"
                android:gravity="center"
                android:textColor="@color/backColor"
                android:layout_height="wrap_content"
                android:clickable="false"
                />

            <EditText
                android:layout_width="match_parent"
                android:id="@+id/edtName"
                android:hint="Enter Name"
                android:singleLine="true"
                android:textColor="@color/backColor"
                android:textColorHint="@color/backColor"
                android:layout_height="wrap_content"/>

            <EditText
                android:layout_width="match_parent"
                android:id="@+id/edtEmail"
                android:hint="Enter email"
                android:singleLine="true"
                android:textColor="@color/backColor"
                android:textColorHint="@color/backColor"
                android:layout_height="wrap_content"/>

            <EditText
                android:layout_width="match_parent"
                android:id="@+id/edtPhoneNumber"
                android:hint="Enter PhoneNumber"
                android:textColor="@color/backColor"
                android:maxLength="10"
                android:singleLine="true"
                android:textColorHint="@color/backColor"
                android:layout_height="wrap_content"/>

            <EditText
                android:layout_width="match_parent"
                android:id="@+id/edtAddress"
                android:hint="Adress"
                android:singleLine="true"
                android:textColor="@color/backColor"
                android:textColorHint="@color/backColor"
                android:layout_height="wrap_content"/>


            <EditText
                android:layout_width="match_parent"
                android:id="@+id/edtPassword"
                android:hint="Create passcode"
                android:textColor="@color/backColor"
                android:textColorHint="@color/backColor"
                android:singleLine="true"
                android:inputType="textPassword"
                android:layout_height="wrap_content"/>

            <EditText
                android:layout_width="match_parent"
                android:id="@+id/edtReEnterPassword"
                android:hint="Re-enter passcode"
                android:inputType="textPassword"
                android:textColor="@color/backColor"
                android:singleLine="true"
                android:textColorHint="@color/backColor"
                android:layout_height="wrap_content"/>

            <Button
                android:layout_width="match_parent"
                android:id="@+id/btnRegister"
                android:background="@drawable/bccolor"
                android:text="Register"
                android:layout_marginTop="10dp"
                android:textColor="#403F3F"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:layout_height="wrap_content"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/tvLinearLayout"
                android:textColor="#FAF6F6"
                android:gravity="center"
                android:textAllCaps="false"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Have an Account?"
                    android:textColor="@color/backColor"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Log in"
                    android:layout_height="wrap_content"
                    android:textColor="#ffff0000" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>